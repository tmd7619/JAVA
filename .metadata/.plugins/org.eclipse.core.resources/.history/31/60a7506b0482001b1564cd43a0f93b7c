package kr.ac.kopo.day03.exem;


/*   
 * 7) 
 * 
 *           *
 *          ***
 *         *****
 *        *******
 *       *********
 *        *******
 *         *****
 *          ***
 *           *
 * 
 *
 * */


public class ExamMain7_3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int space = 4;
		for(int i = 1 ; i <= 9 ; i ++) {
			for(int j = 1 ; j<= space; j++) {
				System.out.print('-');
			}
			System.out.print("*");
			System.out.println();
			
			space += i < 5 ? -1 : 1;
		}
		
		
	}

}
