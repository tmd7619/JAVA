 */	




public class ExamMain01 {

	public static void main(String[] args) {
		
		//1
		for(int i = 1; i <= 5; i++) {
			for(int j = i ;j <= i+4 ; j++) {
				System.out.print(j);
			}
			
			System.out.println();
		}
		
		System.out.println("--------------------------");
		
		//2
		for(int i = 5; i >= 1; i--) {
			for(int j = i ;j <= i +4 ; j++) {
				System.out.print(j);
			}
			
			System.out.println();
		}
		System.out.println("--------------------------");
		
		
		//3
		for(int i = 5; i>=1; i--) {
			for(int j = 1; j<=i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		System.out.println("--------------------------");
		//4
		for(int i = 1 ; i<=9 ; i++) {
			if( i <=5)
				for(int j = 1; j<=i; j++) {
					System.out.print("*");
				}
//			else {
//				for(int j = 1 ;j<=i-4; j++) {
//					System.out.print("*");
//				}
//			}
			System.out.println();
		}
		
		
	}
}
