package kr.ac.kopo.day03.exem;


/*	5)
*	*****
*	-****
*	--***
*   ---**
*   ----*
*   ---**
*   --***
*   -****  
*	*****
*/

public class ExamMain5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		//5
//		int space = 0 ;
		for(int i = 1; i <= 9 ; i++) {
			if(i<=5) {
				//별
				for(int space = 2; space<=i ; space++ ) {	
					System.out.print(' ');
				}	
				for(int j=1 ; j<=5 ; j++){
					System.out.print("*");
				}
				
				
			} else { // i = 6부터 시작 6,7,8,9
				for(int space = 1; space<=i; space++  ) {
					System.out.print(' ');
				}
				for(int j = i ; j>=2;j++) {
					System.out.print("*");
				}
				
			}
			System.out.println();
			
		}
	}

}
