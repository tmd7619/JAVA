*/

public class ExamMain5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		//5
//		int space = 0 ;
		for(int i = 1; i <= 9 ; i++) {
			if(i<=5) {
				//ë³„
				for(int space = 2; space<=i ; space++ ) {	
					System.out.print(' ');
				}	
				for(int j=1 ; j<=5 ; j++){
					System.out.print("*");
				}
				
				
			} else {
				for(int space = 1; space<=i; space++  ) {
					System.out.print(' ');
				}
				for(int j = i ; j>=2;j++) {
					System.out.print("*");
				}
				
			}
			System.out.println();
			
		}
	}

}
